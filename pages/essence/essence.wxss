/* zx/m6/m6.wxss */

page {
  background: #fff;
}

.hn-essence {
  position: absolute;
  top: 0rpx;
  left: 0;
  right: 0;
  bottom: 0;
}

/*导航图片  */

.index-item-img {
  height: 130rpx;
  width: 130rpx;
}

.sw_indx {
  margin: 0rpx 25rpx 25rpx 25rpx;
  height: 380rpx;
  border-radius: 10rpx;
}

/*底部背景图片  */

.card-bg {
  width: 100%;
  height: 247rpx;
  position: absolute;
  z-index: -10;
}

.cell-title {
  text-align: center;
  font-size: 28rpx;
  color: #16191a;
  margin-top: 30rpx;
}

.cell-title text {
  padding: 0 10rpx;
  color: rgba(29, 125, 219, 0.6);
  font-weight: 400;
}

.slide-image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
  border-radius: 10rpx;
}

/* 共享右箭头设置*/

.cell-title .righthead {
  position: absolute;
  right: 30rpx;
  color: #1d7ddb;
  font-size: 28rpx;
}

.righthead:after {
  content: '';
  /*即不把兄弟挤下去 又能设置自己的style  inline不能设置大小 block会挤下去 所以有了inline-block*/
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border: 3rpx solid #1d7ddb;
  border-bottom: none;
  border-left: none;
  transform: rotate(45deg);
  margin-top: -8rpx;
}

.cell {
  margin-top: 30rpx;
}

.equal {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  text-align: center;
}

.equal-box {
  webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

/*产品推荐  */

.product-icon {
  width: 124rpx;
  height: 124rpx;
}

.pro-name {
  font-size: 30rpx;
  color: #2a2a2a;
}

/*贴心服务  */

.service {
  height: 240rpx;
  padding: 0 25rpx;
}

.one-image {
  height: 240rpx;
  width: 340rpx;
}

.two-image {
  width: 340rpx;
  height: 110rpx;
}

.two-image:nth-of-type(1) {
  margin-bottom: 6rpx;
}

/*标题图片  */

.head-img {
  width: 100%;
  height: 220rpx;
}

.colorIsBlue {
  color: #1d7ddb !important;
}

/*品牌  */

.cell-title.brand-title {
  color: #000;
  font-size: 30rpx;
}

.blod-font {
  font-weight: 600 !important;
}

.brand {
  padding: 0 25rpx;
}

.brand-icon {
  width: 220rpx;
  height: 120rpx;
  border-radius: 10rpx;
  box-shadow: rgba(0, 71, 157, 0.2) 0 0 10rpx;
}

.marTopIs10 {
  margin-top: 10rpx;
}

/*一对一服务  */

.scale {
  margin-top: 60rpx;
  text-align: center;
}

.scale-button {
  background: rgb(255, 112, 86);
  color: #fff;
  width: 340rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  font-size: 32rpx;
  margin: 0 auto;
}

.scale-intro {
  width: 660rpx;
  height: 786rpx;
  margin-top: 20rpx;
}

/*我们的优势  */

.advantage {
  text-align: center;
}

.advantage-image {
  width: 710rpx;
  height: 780rpx;
}

