/* 返回顶部 */

.widget-goTop {
  position: fixed;
  bottom: 125px;
  right: 5px;
  background: rgba(0, 0, 0, 0.48);
  border-radius: 50%;
  overflow: hidden;
  z-index: 500;
}

.widget-goTop .gotop-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 50px;
  height: 50px;
  font-size: 12px;
  color: #fff;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.8);
  -webkit-background-size: 50px auto;
}
